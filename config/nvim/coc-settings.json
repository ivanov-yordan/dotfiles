{
  "coc.preferences.rootPatterns": [
    ".git",
    ".env",
    "pyproject.toml",
    "setup.py",
    "dbt_project.yml"
  ],
  "coc.preferences.formatOnSaveFiletypes": [
    "python",
    "javascript",
    "typescript",
    "graphql"
  ],
  "suggest.enablePreview": true,
  "suggest.echodocSupport": true,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.errorSign": "âœ˜",
  "diagnostic.warningSign": "âš ",
  "diagnostic.infoSign": "â“˜ ",
  "diagnostic.hintSign": "ðŸ’¡",
  "codeLens.enable": true,
  "python.jediEnabled": false,
  "python.autoComplete.addBrackets": true,
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "~/.apps/pyenv/versions/neovim/bin/black",
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "~/.apps/pyenv/versions/neovim/bin/flake8",
  "python.sortImports.path": "~/.apps/pyenv/versions/neovim/isort",
  "tsserver.npm": "npm",
  "eslint.autoFixOnSave": true,
  "languageserver": {
    "vim": {
      "command": "vim-language-server",
      "args": ["--stdio"],
      "filetypes": ["vim"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "args": ["--stdio"],
      "filetypes": ["dockerfile"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    },
    "terraform": {
      "command": "terraform-ls",
      "filetypes": ["terraform"]
    }
  },
  "diagnostic-languageserver.filetypes": {
    "markdown": [
      "languagetool",
      "~/.pyenv/versions/neovim/bin/proselint",
      "markdownlint"
    ],
    "mail": [
      "languagetool",
      "~/.pyenv/versions/neovim/bin/proselint"
    ],
    "gitcommit": [
      "languagetool",
      "~/.pyenv/versions/neovim/bin/proselint",
      "~/.pyenv/versions/neovim/bin/gitlint"
    ]
  }
}
